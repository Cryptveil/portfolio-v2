---
import DemoAccount from "./DemoAccountBR";
const { project } = Astro.props;
---

<div
  class="max-w-sm mb-12 rounded overflow-hidden shadow-sm shadow-accent"
>
  <img class="w-full pointer-events-none" src={project.picture} alt={project.alt} />
  <div class="px-6 py-4 flex-1 flex flex-col">
    <div class="font-bold text-xl md:text-2xl mb-2">{project.title}</div>
    <p class="text-md md:text-lg">
      {project.description}
    </p>
    <DemoAccount
      client:load
      demoAccount={project.account}
    />
  </div>
  <div class="px-6 pt-4 pb-2">
    <div class="flex flex-wrap space-x-2 mt-5 pointer-events-none">
      <h2 class="inline-block mb-3 text-xl font-bold leading-5">
        Technologies:
      </h2>
      {project.technologies.map((tech: any) => (
          <span class="px-2 py-1 mb-2 mr-2 text-xs md:text-sm font-semibold text-white bg-accent rounded-full">
            {tech}
          </span>
        ))}
    </div>
    <div class="flex justify-evenly flex-wrap space-x-2 mt-5 mb-2">
      <a
        href={project.demo}
        target="_blank"
        rel="noreferrer"
        aria-label=""
        class="inline-flex px-4 py-2 items-center transform font-semibold border transition duration-300 shadow hover:shadow-lg hover:bg-primary hover:text-black"
      >
        Demo ao vivo
      </a>
      <a
        href={project.source}
        target="_blank"
        rel="noreferrer"
        aria-label=""
        class="inline-flex border hover:bg-primary shadow hover:shadow-lg px-4 py-2 items-center font-semibold transition duration-300 hover:text-black"
      >
        CÃ³digo Fonte
      </a>
    </div>
  </div>
</div>

